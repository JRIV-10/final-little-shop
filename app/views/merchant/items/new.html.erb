<h1>New Item</h1>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, data: { turbo: false } do |form| %>
  <%= form.label :name, "Name: " %>
  <%= form.text_field :name %></br>

  <%= form.label :description, "Description: " %>
  <%= form.text_field :description %></br>

  <%= form.label :unit_price, "Price: " %>
  <%= form.number_field :unit_price %></br>

  <%= form.submit "Submit" %>
<% end %>