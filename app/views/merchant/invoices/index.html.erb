<h1>All of <%= @merchant.name %>'s Invoices</h1>


  <% @merchant.items.each do |item| %>
    <p>Invoices for <%= item.name %>:</p>
      <% item.invoices.each do |invoice| %>
          <ul>
            <li id="invoice-<%= invoice.id %>">Invoice <%= link_to "##{invoice.id}", "/merchants/#{@merchant.id}/invoices/#{invoice.id}", data: { turbo_method: :get } %></li>
          </ul>
        </section>
      <% end %>
  <% end %>
