<h1>Merchants</h1>

<% @merchants.each do |merchant| %>
  <div id="merchant-<%= merchant.id %>">
    <p><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></p>
  </div>
<% end %>

<h3>Enabled Merchants</h3>
<div id="enabled-merchants">
  <%= button_to "Disable", admin_merchants_path, params:{merchant_status: "disabled"}, method: :patch %>
</div>

<h3>Disabled Merchants</h3>
<div id="disabled-merchants">
  <%= button_to "Enable", admin_merchants_path, params:{merchant_status: "enabled"}, method: :patch %>
</div>