<h1>Merchants</h1>

<h3>Enabled Merchants</h3>
<div id="enabled-merchants">
  <% @merchants.each do |merchant| %>
    <% if merchant.status == "enabled" %>
      <p><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Disable", "/admin/merchants/#{merchant.id}", params:{status: "disabled"}, method: :patch %> </p>
    <% end %>
  <% end %>
</div>

<h3>Disabled Merchants</h3>
<div id="disabled-merchants">
  <% @merchants.each do |merchant| %>
    <% if merchant.status == "disabled" %>
      <p><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Enable", admin_merchant_path(merchant), params:{status: "enabled"}, method: :patch %></p>
    <% end %>
  <% end %>
</div>